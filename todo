/************************************
      constructing levels
 ************************************/

function createFirstRow(num, xStart, spacing, yStart, height, counter) {
  var xStart = xStart;
  var yStart =  yStart;
  var spacing = spacing;
  var counter = counter;
  for (var i = 0; i < num; i++) {
    var block = new Block ({context: context, x: xStart += spacing, y: yStart, height: height, counter: counter})
    blocks.push(block)
  }
}
function createSecondRow(num, xStart, spacing, yStart, height, counter) {
  var xStart = xStart;
  var yStart = yStart;
  var spacing = spacing;
  var counter = counter;
  for (var i = 0; i < num; i++) {
    var block = new Block ({context: context, x: xStart += spacing, y: yStart, height: height, counter: counter})
    blocks.push(block)
  }
}
function createThirdRow(num, xStart, spacing, yStart, height, counter) {
  var xStart = xStart;
  var yStart =  yStart;
  var spacing = spacing;
  var counter = counter;
  for (var i = 0; i < num; i++) {
    var block = new Block ({context: context, x: xStart += spacing, y: yStart, height: height, counter: counter})
    blocks.push(block)
 }
}
function createFourthRow(num, xStart, spacing, yStart, height, counter) {
  var xStart = xStart;
  var yStart =  yStart;
  var spacing = spacing;
  var counter = counter;
  for (var i = 0; i < num; i++) {
    var block = new Block ({context: context, x: xStart += spacing, y: yStart, height: height, counter: counter})
    blocks.push(block)
  }
}

function levels() {
  resetBall();
  paddle.x = (canvas.width - 100) / 2;
  if (level === 1) {
    // num, xStart, spacing, yStart, height, counter
    createFirstRow(3, -40, 100, 10, 15, 1);
    createSecondRow(6, 0, 80, 30, 15, 1);
    createThirdRow(3, -40, 100, 50, 15, 1);
    createFourthRow(6, 0, 80, 70, 15, 1);
  } else if (level === 2) {
    createFirstRow(3, -40, 100, 10, 15, 1);
    createSecondRow(6, 0, 80, 30, 15, 1);
    createThirdRow(3, -40, 100, 50, 15, 1);
    createFourthRow(6, 0, 80, 70, 15, 1);
  }else if (level === 3) {
    createFirstRow(3, -40, 100, 10, 15, 1);
    createSecondRow(6, 0, 80, 30, 15, 1);
    createThirdRow(3, -40, 100, 50, 15, 1);
    createFourthRow(6, 0, 80, 70, 15, 1);
  }
}
